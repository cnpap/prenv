{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "nodenext",

    "outDir": "dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}
